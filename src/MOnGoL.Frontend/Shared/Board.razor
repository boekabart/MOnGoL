<table class="table table-bordered">
    @if (board is not null)
    {
        @foreach (var row in Rows)
        {
            <tr>
            @foreach (var coor in row)
            {
                var token = @Coor(coor);
                if (token is null)
                {
                    <td class="p-0 text-center align-middle"><label class="btn btn-light" @onclick="@(e => Put(coor))">&nbsp;</label></td>
                }
                else
                {
                    var bg = token.Scored ? "bg-warning" : "";
                    <td class ="p-0 text-center align-middle @bg">@token.Emoji</td>
                }
            }
            </tr>
        }
    }
    else
    {
        <tr>
            <td>Loading...</td>
        </tr>
    }
</table>
